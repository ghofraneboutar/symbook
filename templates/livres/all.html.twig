
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

{% block body %}
    <div class="container mt-4">
        <h2 class="text-center mb-4 ">Liste des Livres</h2>

        <table class="table table-striped">
            <thead >
            <tr >
                <th>ID</th>
                <th>Titre</th>
                <th>Ã‰diteur</th>
                <th>Prix </th>
                <th>Date</th>
                <th colspan="4" class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for livre in Livres %}
                <tr >
                    <td>{{ livre.id }}</td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.editeur }}</td>
                    <td>{{ livre.prix }}</td>
                    <td>{{ livre.dateEdition|date('d/m/Y') }}</td>

                    <td> <a href="{{ path('app_livres_show', {'id': livre.id}) }}">Voir Plus</a></td>
                    <td> <a href="{{ path('app_livres_update', {'id': livre.id}) }}" >Augmenter Prix</a></td>
                    <td><a href="{{ path('app_livres_delete', {'id': livre.id}) }}">Supprimer</a> </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(Livres) }}
        </div>
    </div>
{% endblock %}
